{
    "name": "wedding-website-assets",
    "version": "0.1.0",
    "private": true,
    "description": "Front-end assets for Megan & Stephen's wedding website (DiceBear-powered avatars).",
    "scripts": {
        "dev": "echo \"Use npm run build:chapel and npm run build:avatars to refresh bundles.\"",
        "build:avatars": "esbuild frontend/avatar.js --bundle --format=iife --global-name=AvatarStudio --outfile=celebration/static/celebration/js/script.js --minify",
        "build:chapel": "esbuild frontend/chapel/main.js --bundle --format=iife --global-name=ChapelScene --outfile=celebration/static/celebration/js/chapel.js --minify",
        "test:playwright": "playwright test",
        "test:cypress": "cypress run",
        "test:cypress:open": "cypress open",
        "test:full": "scripts/verify.sh"
    },
    "dependencies": {
        "@dicebear/collection": "^9.1.5",
        "@dicebear/core": "^9.1.5",
        "three": "^0.182.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "cypress": "^13.14.0",
        "cypress-image-snapshot": "^4.0.1",
        "esbuild": "^0.27.2",
        "pixelmatch": "^5.3.0",
        "pngjs": "^7.0.0"
    }
}
